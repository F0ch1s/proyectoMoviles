<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/btnPerfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/border_white_circle"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icono_perfil"
        android:contentDescription="Perfil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Texto de saludo -->
    <TextView
        android:id="@+id/textSaludo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hola, Usuario"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/btnPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Botón: Crear equipo -->
    <Button
        android:id="@+id/btnCrearEquipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crear equipo"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8E24AA"
        android:layout_marginTop="40dp"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/textSaludo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón: Unirse a equipo -->
    <Button
        android:id="@+id/btnUnirseEquipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Unirse a equipo"
        android:textColor="#FFFFFF"
        android:backgroundTint="#7B1FA2"
        android:layout_marginTop="16dp"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/btnCrearEquipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>